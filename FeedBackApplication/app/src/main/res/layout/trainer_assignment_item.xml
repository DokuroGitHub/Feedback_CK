<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/assignment_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textColor="@color/black"
        android:id="@+id/txtNo_trainer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="No: 1"
        android:textSize="20sp" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/txtModuleName_trainer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Module Name: Truyền thông và mạng máy tính"
        android:textSize="20sp"
        android:layout_below="@id/txtNo_trainer"/>

    <TextView
        android:textColor="@color/black"
        android:id="@+id/txtClassName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Class Name: Class 1"
        android:textSize="20sp"
        android:layout_below="@id/txtModuleName_trainer"/>

    <TextView
        android:textColor="@color/black"
        android:id="@+id/txtTrainerName_trainer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Trainer Name: Trainer1"
        android:textSize="20sp"
        android:layout_below="@id/txtClassName"/>

    <TextView
        android:textColor="@color/black"
        android:id="@+id/txtRegistrationCode"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Registration Code: CL14M14T1602467739"
        android:textSize="20sp"
        android:layout_below="@id/txtTrainerName_trainer"/>

</RelativeLayout>