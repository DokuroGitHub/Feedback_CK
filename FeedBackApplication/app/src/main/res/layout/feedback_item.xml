<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00C32121"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/style_feedback_item"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <TextView
                android:id="@+id/nameTextView1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="Feedback Title:"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feedback_title"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="Feedback A1"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/nameTextView2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="Class Id:"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feedback_class_id"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="12"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/nameTextView3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="Class name"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feedback_class_name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="Class 12"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/nameTextView4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="Module ID:"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feedback_module_id"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="1"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/nameTextView5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="Module Name:"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feedback_module_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="Truyền thông và mạng máy tính"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/nameTextView6"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="End time:"
                android:textStyle="bold"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/feedback_end_time"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="22/122020 00:02"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/nameTextView7"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="Status:"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/feedback_status"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="Complete"
                android:textSize="19sp" />



        </GridLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="-30dp"
        android:layout_marginTop="60dp"

        android:adjustViewBounds="true"
        android:background="#00FFFFFF"

        android:maxWidth="80dp"
        android:maxHeight="80dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_feedbackitem_1" />


</LinearLayout>
